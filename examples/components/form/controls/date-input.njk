{% from "components/icons/icons--svg.njk" import icon_svg as icon_svg %}
{% from "plugins/pikaday/markup/pikaday.njk" import pikaday as pikaday %}
{% macro datoinput(label, hint, day, month, year, tooltip, tooltipTitle, datepicker) %}
<fieldset>
  <div class="form-group">
    <label class="form-label icon-link">{{label}}{% if tooltip %}<button class="js-tooltip tooltip" data-tippy-trigger="click" title="{{tooltipTitle}}" aria-label="{{tooltipTitle}}"><svg class='icon-svg'><use xlink:href='#help-circle-outline'></use></svg></button>{% endif %}</label>
    <span class="form-hint">{{hint}}</span>
    <span class="form-error-message" id="form-error-message-input-error" role="alert"></span>
    <div class="date-group js-calendar-group mt-3">
      <div class="form-group form-group-day">
        <label class="form-label" for="date_of_day_2">{{day}}</label>
        <input class="form-input js-calendar-day-input" id="date_of_day_2" type="tel" min="1" max="31" maxlength="2" pattern="^[0-9]{0,2}$" data-input-regex="^[0-9]{0,2}$" title="Indskriv dag p책 m책nenden som tal">
      </div>
      <div class="form-group form-group-month">
        <label class="form-label" for="date_of_month_1">{{month}}</label>
        <input class="form-input js-calendar-month-input" id="date_of_month_1" type="tel" min="1" max="12" maxlength="2" pattern="^[0-9]{0,2}$"  data-input-regex="^[0-9]{0,2}$" title="Indskriv m책nedens nummer">
      </div>
      <div class="form-group form-group-year ">
        <label class="form-label" for="date_of_year_3">{{year}}</label>
        <input class="form-input js-calendar-year-input" for="date_of_year_3" type="tel" min="1900" max="3000" maxlength="4" pattern="^[0-9]{0,4}$" data-input-regex="^[0-9]{0,4}$" title="Indskriv 책rstal">
      </div>
      {% if datepicker %}
      {{ pikaday() }}
      {% endif %}
    </div>
  </div>
</fieldset>
{% endmacro %}


<div class="container">
{% for item in datoinput_example.items %}
  {{datoinput(item.label, item.hint, item.day, item.month, item.year, item.tooltip, item.tooltipTitle, item.datepicker)}}
{% endfor %}
</div>
